{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GoCert Manager Configuration",
  "type": "object",
  "properties": {
    "configs": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "The email address for ACME account registration."
        }
      },
      "required": ["email"]
    }
  },
  "additionalProperties": {
    "type": "object",
    "properties": {
      "domains": {
        "type": "array",
        "items": { "type": "string" },
        "minItems": 1,
        "description": "A list of domains for the certificate."
      },
      "issuer": {
        "type": "string",
        "description": "The certificate issuer (e.g., letsencrypt, zerossl)."
      },
      "type": {
        "type": "string",
        "description": "The acme.sh DNS provider type (e.g., dns_cf, dns_aws)."
      }
    },
    "required": ["domains", "issuer", "type"]
  },
  "required": ["configs"]
}
